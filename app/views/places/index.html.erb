<h1>Welcome to LA</h1>

<body>
    <% @places.in_groups_of(3, false) do | row | %>
        <div class="row">
            <% for place in row %>
                <div class="col">
                   <% if place.image %>
                    <%= link_to image_tag(place.image, width: 200, height: 200), "/places/#{place.id}" %>
                   <% end %>
                    </div>
            <% end %>
        </div>
        <br>
    <% end %>
</body>